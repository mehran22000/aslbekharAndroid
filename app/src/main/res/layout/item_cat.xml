<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/silver_light_2">

    <android.support.v7.widget.CardView
        android:id="@+id/itemCV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="@dimen/item_city_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="3dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/image"
                android:layout_width="@dimen/item_city_image_h"
                android:layout_height="@dimen/item_city_image_h"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:layout_weight="1"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/image6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:layout_weight="1"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/image8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/brandCount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_weight="1"/>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/image"
                android:maxLines="1"
                android:gravity="right"
                android:padding="2dp"
                android:textColor="@color/textColorPrimaryInverse"
                android:textSize="@dimen/item_title_ts_larger"  />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>