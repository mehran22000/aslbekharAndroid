<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/silver_light_2">

    <android.support.v7.widget.CardView
        android:id="@+id/itemCV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="@dimen/item_city_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="3dp"
            card_view:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/item_city_image_h"
                android:layout_height="@dimen/item_city_image_h"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/image"
                android:maxLines="1"
                android:gravity="center"
                android:padding="2dp"
                android:text=""
                android:textColor="@color/textColorPrimaryInverse"
                android:textSize="@dimen/item_title_ts_larger"  />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>